{
  "openapi": "3.0.3",
  "info": {
    "title": "Assistant API",
    "version": "1.0.0",
    "description": "API для регистрации пользователей и управления ботами"
  },
  "paths": {
    "/register": {
      "post": {
        "tags": ["bot-manager-service"],
        "summary": "Регистрация нового пользователя",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_name": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "org_name": { "type": "string" },
                  "bot_name": { "type": "string" },
                  "business_type": { "type": "string" },
                  "business_type_other": { "type": "string" },
                  "assistant_role": { "type": "string" },
                  "assistant_role_other": { "type": "string" },
                  "welcome_message": { "type": "string" },
                  "role_context": { "type": "string" },
                  "rules": { "type": "string" },
                  "response_format": { "type": "string" },
                  "examples": {"type": "string"},
                  "error_handling": {"type": "string"},
                  "humor_level": {"type": "integer"},
                  "creativity": { "type": "number" },
                  "contacts": {"type": "string"}
                },
                "example": {
                  "user_name": "JohnDoe",
                  "email": "johndoe@example.com",
                  "org_name": "Example Corp",
                  "bot_name": "ExampleBot",
                  "business_type": "IT",
                  "business_type_other": "",
                  "assistant_role": "Support",
                  "assistant_role_other": "",
                  "welcome_message": "Welcome to ExampleBot!",
                  "role_context": "Ты продаешь цифровые копии 1B",
                  "rules": "Будь очень вежливым и терпеливым.",
                  "response_format": "Отвечай в формате <Да Господин!>",
                  "examples": "У вас есть 1С? Нет у нас только есть 1B. Извините.",
                  "error_handling": "Извините, я не понял вопроса. Задайте его по-другому.",
                  "humor_level": 2,
                  "creativity": 0.5,
                  "contacts": "Номер телефона: +3752342500, johndoe@example.com"
                },
                "required": ["user_name", "email", "org_name", "bot_name"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Пользователь успешно зарегистрирован",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user_id": { "type": "integer" },
                    "org_id": { "type": "string" },
                    "bot_id": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "patch": {
        "tags": ["bot-manager-service"],
        "summary": "Обновление пользователя",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "user_name": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Пользователь обновлён",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user_id": { "type": "integer" },
                    "email": { "type": "string" },
                    "user_name": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/bots/info/{bot_id}": {
      "patch": {
        "tags": ["bot-manager-service"],
        "summary": "Обновление информации о личности бота",
        "parameters": [
          {
            "name": "bot_id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "is_enabled": { "type": "boolean" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Бот обновлён",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "bot_id": { "type": "integer" },
                    "name": { "type": "string" },
                    "is_enabled": { "type": "boolean" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/bots/integrations/{bot_id}": {
      "patch": {
        "tags": ["bot-manager-service"],
        "summary": "Получение списка интеграций бота",
        "parameters": [
          {
            "name": "bot_id",
            "in": "query",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Список интеграций успешно получен",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "integration_id": { "type": "integer" },
                      "name": { "type": "string" },
                      "type": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
  
    }
 }
}
